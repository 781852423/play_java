<?xml version="1.0"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
        "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
    <enterprise-beans>
        <session>
            <ejb-name>CartBean</ejb-name>
            <home>com.thoughtworks.davenkin.ejb.stateful.CartHome</home>
            <remote>com.thoughtworks.davenkin.ejb.stateful.CartRemote</remote>
            <ejb-class>com.thoughtworks.davenkin.ejb.stateful.CartBean</ejb-class>
            <session-type>Stateful</session-type>
            <transaction-type>Container</transaction-type>
        </session>
    </enterprise-beans>
</ejb-jar>
