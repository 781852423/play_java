<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="me.davenkin.hibernate.Consent" table="profile">
        <id name="profileId" type="java.lang.Long">
            <column name="id"/>
        </id>
        <property name="globalIndicator">
            <column name="global_indicator"/>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">me.davenkin.hibernate.GlobalIndicator</param>
            </type>
        </property>

        <set name="consentDetails" table="consent"
              lazy="false" fetch="select">
            <key>
                <column name="profile_id" not-null="true"/>
            </key>
            <composite-element class="me.davenkin.hibernate.ConsentDetail">
                <property name="channel" type="java.lang.String">
                    <column name="channel"/>
                </property>
                <property name="consentIndicator">
                <column name="indicator"/>
                <type name="org.hibernate.type.EnumType">
                    <param name="enumClass">me.davenkin.hibernate.ConsentIndicator</param>
                </type>
                </property>
            </composite-element>
        </set>

    </class>

</hibernate-mapping>